def index
  @accommodations = current_user.accommodations
end

<div class="accommodations-grid">
  <% @accommodations.each do |accommodation| %>
    <div class="accommodation-card">
      <%= link_to accommodation_path(accommodation) do %>
        <div class="accommodation-image">
          <%= image_tag accommodation.photo_url if accommodation.photo.attached? %>
        </div>
        <div class="accommodation-title">
          <h3><%= accommodation.title %></h3>
        </div>
        <div class="accommodation-availability">
          <p><%= accommodation.available_dates %></p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

def show
  @accommodation = Accommodation.find(params[:id])
end

<h1><%= @accommodation.title %></h1>
<div class="accommodation-detail">
  <div>
    <%= image_tag @accommodation.photo_url if @accommodation.photo.attached? %>
  </div>
  <div>
    <p><strong>Descrição:</strong> <%= @accommodation.description %></p>
    <p><strong>Endereço:</strong> <%= @accommodation.address %></p>
    <p><strong>Disponibilidade:</strong> <%= @accommodation.available_dates %></p>
    <p><strong>Comodidades:</strong> <%= @accommodation.amenities.join(', ') %></p>
  
  </div>
</div>
